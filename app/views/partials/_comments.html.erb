

    <div class="card">
                <h3 class="text-center "> Comments: </h3>
<%article.comments.each do |comment| %>
        <div class="container mb-5 mt-5">
    <div class="card">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="media"> <img class="mr-3 rounded-circle" alt="Bootstrap Media Preview" src="https://techcrunch.com/wp-content/uploads/2015/09/11667534_10102203860243201_2713296330820668368_n.jpg?w=528" />
                            <div class="media-body">
                                <div class="row">
                                    <div class="col-8 d-flex">
                                        <h5><%=comment.user.username%></h5>
                                    </div>
                                </div>
                                <%= comment.content%> 
                                <% if current_user.id == comment.user.id%> <br>
                                    <%= link_to 'Delete', comment,class:"btn btn-ssm btn-outline-secondary", method: :delete, data:{Confirm: "Delete?"}%> 
                                    <%= link_to 'Edit', edit_comment_path(comment),class:"btn btn-ssm btn-outline-secondary"%>
                                <%end%>
                                <div class="media mt-4"> <a class="pr-3" href="#"><img class="rounded-circle" alt="Bootstrap Media Another Preview" src="https://cdn.pixabay.com/photo/2017/06/13/12/53/profile-2398782_1280.png" /></a>
                                <%= render partial: '/partials/replies', locals:{article: @article, comment: comment}%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                                <div class="d-flex justify-content-center pt-3 pb-2"><%= render partial: '/partials/rform', locals: {reply: @reply, comment: comment}%></div>

