Replies:

    <div class="card">
        <ul>
            <% comment.replies.each do |reply| %>
                <li><%= reply.content%></li>
                        <% if current_user.id == reply.user.id%>
                <%=link_to "Edit Reply", edit_reply_path(reply)%> <br>
                <%=link_to "Delete Reply", reply , method: :delete,  data:{Confirm: "Delete?"}%>
                <%end%>
            <%end%>
        </ul>
    
    </div>

   